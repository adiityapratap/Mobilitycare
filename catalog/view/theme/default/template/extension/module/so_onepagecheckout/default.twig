// Function to toggle forms
function togglePaymentForms(selected,validateData=true) {
    if (selected === 'ndis_checkout') {
        $('#ndis-form').show();
        $('.bankTransferPm').hide();
        $('.cardPaymentInfo').hide();
        $(".confirm-order").show();
        $('#payment-ui-container').hide();
        
    } else if (selected === 'bank_transfer') {
        $('#ndis-form').hide();
        $('.bankTransferPm').show();
        $('.cardPaymentInfo').hide();
        $(".confirm-order").show();
        $('#payment-ui-container').hide();
    } else {
        $('#ndis-form').hide();
        $('.bankTransferPm').hide();
        $('.cardPaymentInfo').show();
        $(".confirm-order").hide();
        
        if ($('#payment-ui-container').length === 0 && validateData) {
        fetchCreditCardContainerUI();
        }else{
            $('#payment-ui-container').show();
        }
        
    }
}


