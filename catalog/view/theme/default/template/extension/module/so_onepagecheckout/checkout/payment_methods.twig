{% if payment_method_status == 1 %}
<div class="checkout-content checkout-payment-methods">
    {% if error_warning %}
        <div class="alert alert-warning warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        </div>
    {% endif %}
    {% if payment_methods %}
        <h2 class="secondary-title"><i class="fa fa-credit-card hidden"></i>{{ text_title_payment_method }}</h2>
        <div class="box-inner" style="    padding-left: 30px;">
           {% for payment_method in payment_methods %}
    <div class="radio">
        <label>
            <input type="radio" class="{{ selected_payment }}_{{ code }}_{{ default_payment }}"
                   name="payment_method" 
                   value="{{ payment_method.code }}"
                   {% if selected_payment %}
                       {% if payment_method.code == selected_payment %}
                           checked="checked"
                       {% endif %}
                   {% else %}
                       {% if payment_method.code == code %}
                           checked="checked"
                       {% elseif default_payment is defined and default_payment == payment_method.code %}
                           checked="checked"
                       {% endif %}
                   {% endif %}
            />
            {{ payment_method.title }}
            {% if payment_method.terms is defined and payment_method.terms %}
                ({{ payment_method.terms }})
            {% endif %}
        </label>
    </div>
{% endfor %}


            
     <div class="well well-sm bankTransferPm">
  <p class="text-black">We will send you an invoice with bank details for payment. Your order will be shipped as soon as payment is received.</p>
 
</div>        
            
    <div id="ndis-form" class="panel panel-default">
    <div class="panel-body">
        
        <p class="text-success"><strong>MobilityCare is a registered NDIS provider. Your information is securely handled in compliance with NDIS guidelines.</strong></p>
     

        <h4 class="text-black">Participant Information</h4>
        <p class="text-black"><small>Please note: We will send a pending order to our NDIS team and you will be notified when funding has been confirmed.</small></p>

        <div class="form-group">
            <input type="text" name="ndis_full_name" class="form-control" placeholder="Full Name" required>
        </div>

        <div class="form-group">
            <input type="text" name="ndis_participant_number" class="form-control" placeholder="NDIS Participant Number" required>
            <small class="text-muted">You can find this on your NDIS plan documents</small>
        </div>

        <div class="form-group">
            <input type="text" name="ndis_dob" class="form-control" placeholder="Date of Birth (DD/MM/YYYY)" required>
        </div>

        <div class="form-group">
            <input type="email" name="ndis_email" class="form-control" placeholder="Email Address" required>
        </div>

        <div class="form-group">
            <input type="tel" name="ndis_phone" class="form-control" placeholder="Phone Number" required>
        </div>

        <h4 class="text-black">NDIS Funding Details</h4>

        <div class="form-group">
            <select name="ndis_requestor" class="form-control" placeholder="Who's making the request?" required>
                <option value="" disabled selected>Who's making the request?</option>
                <option value="Self (Participant)">Self (Participant)</option>
                <option value="Support Co-ordinator">Support Co-ordinator</option>
                <option value="Health Professional">Health Professional</option>
                <option value="Nominee">Nominee (Family Member or authorised representative)</option>
            </select>
        </div>
        
        <h4 class="text-black">NDIS Plan Type</h4>

        <div class="form-group" style="padding-left: 22px;">
            <div class="radio">
                <label><input type="radio" name="ndis_plan_type" value="Self Managed" required> Self Managed <small class="text-muted">participant pays directly and claims via the NDIS portal</small></label>
            </div>
            <div class="radio">
                <label><input type="radio" name="ndis_plan_type" value="Plan Managed" required> Plan Managed <small class="text-muted">a Plan Manager pays on behalf of the participant</small></label>
            </div>
            <div class="radio">
                <label><input type="radio" name="ndis_plan_type" value="NDIA Managed" required> NDIA Managed <small class="text-muted">NDIA directly pays approved providers like MobilityCare</small></label>
            </div>
        </div>

        <div class="form-group">
            <input type="text" name="ndis_plan_start_date" class="form-control" placeholder="NDIS Plan Start Date (DD/MM/YYYY)" required>
        </div>

        <div class="form-group">
            <input type="text" name="ndis_plan_end_date" class="form-control" placeholder="NDIS Plan End Date (DD/MM/YYYY)" required>
        </div>

        <div id="conditional-fields" style="display: none;">
            <div class="form-group">
                <input type="text" name="ndis_plan_manager_name" class="form-control" placeholder="Plan Manager Name">
            </div>
            <div class="form-group">
                <input type="text" name="ndis_plan_manager_email" class="form-control" placeholder="Plan Manager Email">
            </div>
            <div class="form-group">
                <input type="text" name="ndis_plan_manager_phone" class="form-control" placeholder="Plan Manager Phone">
            </div>
            <div class="form-group">
                <textarea name="ndis_additional_notes" class="form-control" rows="3" placeholder="Additional Notes"></textarea>
            </div>
        </div>
        
        <h4 class="text-black">Consent & Declaration</h4>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="ndis_consent_accuracy" required> 
                I confirm that the information provided is accurate and that I’m authorised to submit this request under the NDIS plan.
            </label>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="ndis_consent_processing" required> 
                By submitting this form, I consent to MobilityCare processing this request in accordance with NDIS guidelines and sharing details where necessary to complete the order.
            </label>
        </div>

        <script>
            $(document).ready(function() {
                function toggleConditionalFields() {
                    var planType = $('input[name="ndis_plan_type"]:checked').val();
                    var requestor = $('select[name="ndis_requestor"]').val();
                    if (planType === 'Plan Managed' || requestor === 'Support Co-ordinator') {
        $('#conditional-fields').show();
        // Add required attribute
        $('#conditional-fields')
            .find('input, textarea')
            .attr('required', true);
    } else {
        $('#conditional-fields').hide();
        // Remove required attribute so validation doesn’t block form
        $('#conditional-fields')
            .find('input, textarea')
            .removeAttr('required');
    }
                }

                // Initial check
                toggleConditionalFields();

                // Listen for changes
                $('input[name="ndis_plan_type"]').on('change', toggleConditionalFields);
                $('select[name="ndis_requestor"]').on('change', toggleConditionalFields);
            });
        </script>
    </div>
</div>


     
        


        </div>
    {% endif %}
</div>
{% endif %}