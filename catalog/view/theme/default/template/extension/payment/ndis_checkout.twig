<div class="buttons NDIS">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirmNDIS" class="btn btn-primary" data-loading-text="{{ text_loading }}" />
  </div>
</div>
<script type="text/javascript"><!--
$('#button-confirmNDIS').on('click', function() {
	$.ajax({
		type: 'get',
		url: 'index.php?route=extension/payment/ndis_checkout/confirm',
		cache: false,
		beforeSend: function() {
			$('#button-confirmNDIS').button('loading');
		},
		complete: function() {
			$('#button-confirmNDIS').button('reset');
		},
		success: function() {
			location = '{{ continue }}';
		}
	});
});
//--></script>



