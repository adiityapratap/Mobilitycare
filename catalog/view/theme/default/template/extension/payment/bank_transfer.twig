<h2>{{ text_instruction }}</h2>
<p><b>{{ text_description }}</b></p>
<div class="well well-sm">
  <p>{{ bank }}</p>
  <p>{{ text_payment }}</p>
</div>
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirmBT" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
  </div>
</div>
<script type="text/javascript"><!--
$('#button-confirmBT').on('click', function() {
	var $btn = $(this);
	$.ajax({
		url: 'index.php?route=extension/payment/bank_transfer/confirm',
		dataType: 'json',
		beforeSend: function() {
			$btn.button('loading');
			$btn.prop('disabled', true);
		},
		success: function(json) {
			if (json['redirect']) {
				location = json['redirect'];	
			} else if (json['error']) {
				// Only reset button if there's an error
				$btn.button('reset');
				$btn.prop('disabled', false);
				alert(json['error']);
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			$btn.button('reset');
			$btn.prop('disabled', false);
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});
//--></script>
