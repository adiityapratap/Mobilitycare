<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order Alert</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        h3 { color: #034488; margin-top: 20px; margin-bottom: 10px; }
        .section { margin-bottom: 20px; }
        .product-item { padding: 5px 0; border-bottom: 1px solid #eee; }
        .option { padding-left: 20px; color: #666; }
        .total-row { padding: 5px 0; }
    </style>
</head>
<body>
    <p>{{ text_received }}</p>

    <div class="section">
        <p><strong>{{ text_order_id }}</strong> {{ order_id }}<br>
        <strong>{{ text_date_added }}</strong> {{ date_added }}<br>
        <strong>{{ text_order_status }}</strong> {{ order_status }}</p>
    </div>

    <div class="section">
        <h3>Customer Details</h3>
        <p>
            <strong>Name:</strong> {{ firstname }} {{ lastname }}<br>
            <strong>Email:</strong> {{ email }}<br>
            <strong>Phone:</strong> {{ telephone }}
        </p>
    </div>

    {% if payment_method or payment_address %}
    <div class="section">
        <h3>Payment</h3>
        <p>
            {% if payment_method %}
            <strong>Method:</strong> {{ payment_method }}<br>
            {% endif %}
            {% if payment_address %}
            <strong>Address:</strong> {{ payment_address }}
            {% endif %}
        </p>
    </div>
    {% endif %}

    {% if shipping_method or shipping_address %}
    <div class="section">
        <h3>Shipping</h3>
        <p>
            {% if shipping_method %}
            <strong>Method:</strong> {{ shipping_method }}<br>
            {% endif %}
            {% if shipping_address %}
            <strong>Address:</strong> {{ shipping_address }}
            {% endif %}
        </p>
    </div>
    {% endif %}

    {% if customer_comment %}
    <div class="section">
        <h3>Order Comment</h3>
        <p>{{ customer_comment }}</p>
    </div>
    {% endif %}

    <div class="section">
        <h3>{{ text_product }}</h3>
        {% for product in products %}
        <div class="product-item">
            <strong>{{ product.quantity }}x</strong> {{ product.name }} ({{ product.model }}) - {{ product.total }}
            {% if product.option %}
            <div class="option">
                {% for option in product.option %}
                - {{ option.name }}: {{ option.value }}<br>
                {% endfor %}
            </div>
            {% endif %}
        </div>
        {% endfor %}

        {% if vouchers %}
        {% for voucher in vouchers %}
        <div class="product-item">
            <strong>1x</strong> {{ voucher.description }} - {{ voucher.amount }}
        </div>
        {% endfor %}
        {% endif %}
    </div>

    <div class="section">
        <h3>{{ text_total }}</h3>
        {% for total in totals %}
        <div class="total-row">
            <strong>{{ total.title }}:</strong> {{ total.value }}
        </div>
        {% endfor %}
    </div>

    {% if comment %}
    <div class="section">
        <h3>{{ text_comment }}</h3>
        <p>{{ comment }}</p>
    </div>
    {% endif %}
</body>
</html>
