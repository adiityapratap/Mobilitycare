      <div class="text-red">{{ error_full_name }}</div>
    {% endif %}
  </div>

  <div class="">
    <input type="text" name="business_name" placeholder="Business Name *" required>
    {% if error_business_name %}
      <div class="text-red">{{ error_business_name }}</div>
    {% endif %}
  </div>

  <div class="">
    <input type="email" name="email" placeholder="Email Address *" required>
    {% if error_email %}
      <div class="text-red">{{ error_email }}</div>
    {% endif %}
  </div>

  <div class="">
    <input type="number" name="phone" maxlength="10" placeholder="Phone Number *" required>
