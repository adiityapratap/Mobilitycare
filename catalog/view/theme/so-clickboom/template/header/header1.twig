{#=====Get variable : Config Select Block on header=====#}
{% set hidden_headercenter = soconfig.get_settings('toppanel_type') =='2'? 'hidden-compact' : '' %}
{% set hidden_headerbottom = soconfig.get_settings('toppanel_type') =='1'? 'hidden-compact' : '' %}

<header id="header" class=" variant typeheader-{{ typeheader ? typeheader : '1'}}">
	{#======	HEADER TOP	=======#}  
		{% if soconfig.get_settings('custom_status') %}
	<div class="text-discount hidden-xs hidden-compact" >
		<div class="container">
			{{ soconfig.get_settings('custom_html') }}
		</div>
	</div>
	{% endif %}	
	<div class="header-top hidden-compact">	
		<div class="container">
			<div class="row">
				<div class="header-top-left col-lg-6 col-md-6 hidden-sm hidden-xs">
					<!-- header socials -->
				
					{% if soconfig.get_settings('header_socials') %}
						<div class="header-socials hidden-sm hidden-xs" >
							{{ soconfig.get_settings('custom_socials') }}
						</div>
					{% endif %}
					{% if soconfig.get_settings('welcome_message_status') %}
						
							{% if soconfig.get_settings('welcome_message') is not empty %}
	                            {{ soconfig.get_settings('welcome_message')}}
	                        {% endif %} 
						
					{% endif %}	

				</div>
				<div class="header-top-right col-lg-6 col-sm-12 col-md-6 col-xs-12">									
					<ul class="top-link list-inline">
						 <li class="account " id="my_account"><a href="{{ account }}" title="{{ text_account }}" class="btn-xs dropdown-toggle" data-toggle="dropdown"> <span>{{ text_account }}</span> <span class="fa fa-angle-down"></span></a>
							<ul class="dropdown-menu ">
								{% if logged %} 
									<li><a href="{{ account }}">{{ text_account }}</a></li>
									<li><a href="{{ order }}">{{ text_order }}</a></li>
									<li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
									<li><a href="{{ download }}">{{ text_download }}</a></li>
									{% if soconfig.get_settings('checkout_status') %}
									<li class="checkout"><a href="{{ checkout }} " class="btn-link" title="{{ text_checkout }} "><span >{{ text_checkout }} </span></a></li>
									{% endif %} 
									<li><a class="link-lg" href="{{ logout}} "> {{ text_logout }} </a></li>
								{% else %} 
									<li><a class="link-lg" href="{{ login }} "> {{ text_login }} </a></li>
									<li><a class="register" href="{{ register }}">{{ text_register }}</a></li>
								 {% endif %}	
							</ul>
						</li>
						{% if soconfig.get_settings('iconWishlist_status')  %}

						<li class="wishlist hidden-md hidden-sm hidden-xs"><a href="{{ wishlist }}" id="wishlist-total" class="top-link-wishlist" title="{{ text_wishlist }} "><span>{{ text_wishlist }}</span></a></li>
						{% endif %} 
						{% if soconfig.get_settings('iconCompare_status')  %}
						<li class="compare hidden-sm hidden-xs"><a href="{{ compare }}"  class="top-link-compare" title="{{ text_compare }} "><span>{{ text_compare }}</span></a></li> 
						{% endif %}					
					</ul>
					
					<ul class="top-link list-inline lang-curr">
						{% if currency %}<li class="currency"> {{ currency }}  </li> {% endif %}
						{% if language %} <li class="language">{{ language }} </li>	{% endif %}		
					</ul>
				</div>
			</div>
		</div>		
	</div>

	
	<div class="header-center {{hidden_headercenter}}">	
		<div class="container">
			<div class="row">		
					
				<div class="navbar-logo col-md-3 col-sm-12 col-xs-12">
					<div class="logo">
				   		{{soconfig.get_logo()}}
				   	</div>					
				</div>
				<div class="header-center-right col-md-9 col-sm-12 col-xs-12">
					<div class="search-header-w">
						{{ search_block }}
					</div>	
					<div class="shopping_cart pull-right">							
					 	{{ cart }}
					</div>
				</div>
				
			</div>
		</div>
	</div>
	
	<div class="header-bottom {{hidden_headerbottom}}">
		<div class="container">
			<div class="row">
				<div class="header-bottom-left col-md-3 col-sm-4 col-xs-6">
					<div class="bottom1 menu-vertical">
						{{ content_menu2 }}	
					</div>	
				</div>
				<div class="header-bottom-right col-md-9 col-sm-8 col-xs-6">
					<div class="main-menu-w">
						{{ content_menu1 }}	
					</div>	
				</div>							
			</div>
		</div>
	</div>

</header>