			<div class="col-sm-6 col-xs-12 contact-form">
			   <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal quoteForm">
        <fieldset>
           
            <p>{{ comment }}</p>
            
            <div class="form-group required">
                <div class="col-sm-12">
                    <input type="text" name="name" value="{{ name }}" id="input-name" class="form-control" placeholder="Enter your full name *"/>
                    {% if error_name %} 
                    <div class="text-danger">{{ error_name }}</div>
                    {% endif %} 
                </div>
            </div>
            
            <div class="form-group required">
                <div class="col-sm-12">
                    <input type="email" name="email" value="{{ email }}" id="input-email" class="form-control" placeholder="Enter your email address *" />
                    {% if error_email %} 
                    <div class="text-danger">{{ error_email }}</div>
                    {% endif %} 
                </div>
            </div>
            
            <div class="form-group required">
                <div class="col-sm-12">
                    <input type="number" name="phone" value="{{ phone }}" id="input-phone" class="form-control" placeholder="Enter your phone number *" />
                    {% if error_phone %} 
                    <div class="text-danger">{{ error_phone }}</div>
                    {% endif %} 
                </div>
            </div>
            
            <div class="form-group required">
                <div class="col-sm-12">
                   <input type="text" class="form-control" name="postcode" placeholder="Postcode *" maxlength="4" pattern="^[0-9]{1,4}$" title="Please enter up to 4 digits only" oninput="this.value=this.value.replace(/[^0-9]/g,'').slice(0,4);" required>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-12">
                  
                   <select name="manufacturer_id" id="manufacturer_id" class="form-control" >
    <option value="" disabled {% if not manufacturer_id %}selected{% endif %}>Product of interest *</option>
    {% for manufacturer in manufacturers %}
            <option value="{{ manufacturer.manufacturer_id }}" {% if manufacturer_id == manufacturer.manufacturer_id %}selected{% endif %}>
                {{ manufacturer.name }}
            </option>
    {% endfor %}
    </select>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-12">
                    <label>Are you contacting us as?</label>
                    <select name="contact_type" id="contact_type" class="form-control">
                       
                        <option value="For Myself">For Myself</option>
                        <option value="For a Friend/Family Member">For a Friend/Family Member</option>
                        <option value="Healthcare Professional">Healthcare Professional</option>
                        <option value="Dealer or Business">Dealer or Business</option>
                        <option value="Government or Non-Profit Organisation">Government or Non-Profit Organisation</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group" id="healthcare_profession" style="display: none;">
                <div class="col-sm-12">
                    <label>If Healthcare Professional, please specify:</label>
                    <select name="healthcare_profession" class="form-control">
                        <option value="Occupational Therapist">Occupational Therapist</option>
                        <option value="Physiotherapist">Physiotherapist</option>
                        <option value="Rehabilitation Specialist">Rehabilitation Specialist</option>
                        <option value="Aged Care Professional">Aged Care Professional</option>
                        <option value="Nurse or Caregiver">Nurse or Caregiver</option>
                        <option value="Neurologist">Neurologist</option>
                        <option value="Orthopedic Specialist">Orthopedic Specialist</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group required">
                <div class="col-sm-12">
                    <label>Reason for Inquiry</label>
                    <select name="inquiry_reason" class="form-control">
                        <option value="General Inquiry">General Inquiry</option>
                        <option value="Demonstration">Demonstration</option>
                        <option value="Quote">Quote</option>
                        <option value="Find a dealer near me">Find a dealer near me</option>
                        <option value="Product Information">Product Information</option>
                        <option value="Dealer or Business Partnership">Dealer or Business Partnership</option>
                        <option value="Technical Support">Technical Support</option>
                        <option value="Warranty or Returns">Warranty or Returns</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-12">
                    <textarea name="enquiry" rows="5" id="input-enquiry" placeholder="Type your message here" class="form-control">{{ enquiry }}</textarea>
                    {% if error_enquiry %} 
                    <div class="text-danger">{{ error_enquiry }}</div>
                    {% endif %} 
                </div>
            </div>
            
            {{ captcha }}
        </fieldset>
        
         <input type="hidden" name="originalCaptcha" value={{ originalCaptcha }}>
        <div class="form-group">
       <button  style="width: 100%;" class="btn loadButton" type="submit">{{ button_submit }}</button>
