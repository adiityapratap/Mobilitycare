          <script>
document.getElementById("contact_type").addEventListener("change", function() {
    const manufacturerField = document.querySelector("[name='manufacturer_id']");
    const healthcareField = document.getElementById("healthcare_profession");

    if (this.value === "Healthcare Professional") {
        healthcareField.style.display = "block";
        manufacturerField.setAttribute("required", "required");
    } else {
        healthcareField.style.display = "none";
        manufacturerField.removeAttribute("required");
    }
});
</script>

