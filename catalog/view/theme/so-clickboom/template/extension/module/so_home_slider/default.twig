{% set count_item = list|length %}
<style>

/* Target iPads / tablets (portrait + landscape between 768px and 1024px) */
@media (min-width: 768px) and (max-width: 1024px) {
  .see-more-container {
    flex-direction: column !important;
    align-items: center;
  }

  .see-more-container .see-more-button {
    width: 80%; /* or 100% if you want full width */
    margin-bottom: 15px;
  }
  
  
}

</style>
<div class="module sohomepage-slider {{ class_suffix}}">
    {% if disp_title_module %}
      <h3 class="modtitle">{{ head_name}}</h3>
    {% endif %}

{% if pre_text|trim is not empty %}
  <div class="form-group">
    {{ pre_text }}
  </div>
{% endif %}

<div class="modcontent">
    {% if list %} 
    <div id="sohomepage-slider{{ module}}">
         <div class="so-homeslider sohomeslider-inner-{{ module}}">
        {% for item in list %}        
    <div class="item banner">
        <a href="{{ item.url }}" title="{{ item.title }}" target="{{ item_link_target }}" style="height: 600px;">
            <img class="lazyload" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ item.thumb }}" alt="{{ item.title }}" />
        </a>
        <div class="sohomeslider-description banner-content">
            {% if item.caption %} 
                <h2>{{ item.caption }}</h2> 
                <h2 style="font-style: italic;">Discover the ultimate wheelchair power assist today.</h2> 
            {% endif %}
            {{ item.description }}
            <div class="see-more-container text-center" style="margin-top: 20px; display: flex; justify-content: center; gap: 20px;">
    <a href="buy/light-drive-wheelchair-power-assist" class="btn see-more-button banner-button" style="background-color: white; color: #f33233;  padding: 10px 40px; text-decoration: none; border-radius: 5px; font-weight: bold;">
        Explore Benefits
    </a>
    <a href="request-quote" class="btn see-more-button banner-button" style="background-color: #f33233; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-weight: bold;">
        Get Your Custom Quote
    </a>
</div>
        </div>
    </div>
{% endfor %}

      
        </div>
    <script type="text/javascript">      
      var total_item = {{ count_item }} ;
      $(".sohomeslider-inner-{{ module}}").owlCarousel2({
         
          animateOut: '{{ animateOut}}',
          animateIn: '{{ animateIn}}',
          autoplay: {{ autoplay}},
          autoplayTimeout: {{ autoplayTimeout}},
          autoplaySpeed:  {{ autoplaySpeed}},
          smartSpeed: 500,
          dotsContainer: false,
          autoplayHoverPause: {{ autoplayHoverPause}},
          startPosition: {{ startPosition}},
          mouseDrag:  {{ mouseDrag}},
          touchDrag: {{ touchDrag}},
          // dotsContainer: true,
          // dotsContainer: '.dotsCont',
          dots: {{ dots}},
          autoWidth: false,
          dotClass: "owl2-dot",
          dotsClass: "owl2-dots",
          loop: {{ loop}},
          navText: ["Next", "Prev"],
          navClass: ["owl2-prev", "owl2-next"],
          responsive: {
          0:{ items: {{ nb_column4}},
            nav: total_item <= {{ nb_column4 }} ? false : (({{ nav  }} ) ? true: false),
          },
          480:{ items: {{ nb_column3 }},
            nav: total_item <= {{ nb_column3 }} ? false : (({{ nav  }} ) ? true: false),
          },
          768:{ items: {{ nb_column2 }},
            nav: total_item <= {{ nb_column2 }} ? false : (({{ nav  }} ) ? true: false),
          },
          992:{ items: {{ nb_column1 }},
            nav: total_item <= {{ nb_column1 }} ? false : (({{ nav  }} ) ? true: false),
          },
          1200:{ items: {{ nb_column0 }},
            nav: total_item <= {{ nb_column0 }} ? false : (({{ nav  }} ) ? true: false),
          }
        },
      });
    </script>
    </div>
    {% else %}  
        {{ objlang.get('text_noitem') }}
    {% endif %}
</div> <!--/.modcontent-->

{% if post_text|trim is not empty %}
  <div class="form-group">
    {{ post_text }}
  </div>
{% endif %}


</div> 
<style>

.banner {
    position: relative;
    width: 100%;
   
    
}

.banner::before {
    content: '';
    position: absolute;
    top: 0 !important;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2); /* Dim overlay: Adjust opacity (0.5) as needed */
    z-index: 1;
}

.banner-content {
    position: absolute;
    top: 40% !important;
    left: 50% !important;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 2;
}

.banner-content h2 {
    font-size: 3rem;
    margin-bottom: 20px;
    line-height:46px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.banner-button {
    display: inline-block;
    background-color: red;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    transition: background-color 0.3s;
}

.banner-button:hover {
    background-color: darkred;
}


</style>
