<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirmNDIS" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
  </div>
</div>
<script type="text/javascript"><!--
// this code is not in use any more as we are triggering confirm button click from checkout page directly

$('#button-confirmNDIS').on('click', function() {
	$.ajax({
		url: 'index.php?route=extension/payment/ndis_checkout/confirm',
		dataType: 'json',
		beforeSend: function() {
			$('#button-confirmNDIS').button('loading');
		},
		complete: function() {
			$('#button-confirmNDIS').button('reset');
		},
		success: function(json) {
		   
			if (json['redirect']) {
				location = json['redirect'];	
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});
//--></script>
