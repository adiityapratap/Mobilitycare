<style>
/* Contact Boxes */
.contact-box {
    box-shadow: 2px 2px 8px #ececec;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background-color: #001a35;
    margin: 10px;
    padding: 15px;
    min-height: 80px; /* Flexible height for mobile */
}
.contact-box h4 {
    margin: 0;
    color: #ffffff;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex-wrap: wrap;
}
.contact-box i {
    margin-right: 8px;
    font-size: 18px;
}

/* Social Media Section */
.socials-footer {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 15px;
    justify-content: center;
}
.socials-footer li a {
    color: #a94442; /* Changed from red for consistency */
    font-size: 22px;
}
.socials-footer li a:hover {
    color: #0055DD;
}

/* Info Contact and Form */
.info-contact {
    padding: 20px 0;
}
.info-contact p, .info-contact span, .info-contact b, .info-contact h4, .info-contact small {
    color: #000 !important;
}
.info-contact h4 {
    font-size: 18px;
    margin-bottom: 15px;
}
.info-contact p, .info-contact small {
    font-size: 14px;
    margin-bottom: 10px;
}
.form-horizontal .form-group {
    margin-bottom: 15px;
}
.form-control {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
}
.form-control:focus {
    border-color: #0066FF;
    outline: none;
}
textarea.form-control {
    resize: vertical;
    min-height: 100px;
}
.text-danger {
    color: #a94442;
    font-size: 12px;
    margin-top: 5px;
}
.btn-danger {
    background: #a94442;
    border: none;
    padding: 10px 20px;
    font-size: 14px;
    color: #fff !important;
    border-radius: 4px;
    width: 100%;
}
.btn-danger:hover {
    background: #923a3a;
}

/* Map */
iframe, #map-canvas {
    width: 100%;
    height: 450px;
    margin-bottom: 20px;
}
#map-canvas img.img-responsive {
    width: 100%;
    height: auto;
}

/* Mobile Responsiveness */
@media (max-width: 767px) {
    .container.mt-5 {
        margin-top: 20px;
    }
    .contact-box {
        min-height: 60px; /* Smaller height for mobile */
        padding: 10px;
        margin: 5px;
    }
    .contact-box h4 {
        font-size: 14px;
    }
    .contact-box i {
        font-size: 16px;
        margin-right: 5px;
    }
    .info-contact {
        padding: 10px 0;
    }
    .info-contact h4 {
        font-size: 16px;
    }
    .info-contact p, .info-contact small {
        font-size: 13px;
    }
    .socials-footer {
        gap: 10px;
    }
    .socials-footer li a {
        font-size: 18px;
    }
    .form-control {
        font-size: 13px;
        padding: 8px;
    }
    textarea.form-control {
        rows: 4; /* Reduced rows for mobile */
    }
    .btn-danger {
        font-size: 13px;
        padding: 8px;
    }
    iframe, #map-canvas {
        height: 250px; /* Smaller map height for mobile */
    }
}
</style>

