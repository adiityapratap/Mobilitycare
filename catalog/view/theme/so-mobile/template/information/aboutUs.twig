      color: #fff;
    }
    .hero-section {
      position: relative;
      height: 500px;
      background: #222;
      color: #fff;
      overflow: hidden;
    }
    .hero-section img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.5;
      top: 0;
      left: 0;
    }
    .hero-content {
      position: relative;
      z-index: 2;
      top: 50%;
      transform: translateY(-50%);
    }
    .card {
      background: #fff;
      border-radius: 10px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
      transition: all .3s ease-in-out;
      height: 306px; 
      /*height: 100%;*/
    }
    #commitmentSection .card{
        height: 416px;  
    }
    .card:hover {
      box-shadow: 0px 6px 18px rgba(0,0,0,0.15);
    }
    .card-icon {
      width: 60px;
      height: 60px;
      margin: 0 auto 20px;
      border-radius: 50%;
      background: rgba(4,68,136,0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22px;
      color: #044488;
    }
    .btnContactFooter {
      background: #ea3a3c;
      padding: 20px 50px;
      border-radius: 50px;
      font-size: 20px;
      font-weight: bold;
      color: #fff;
      display: inline-block;
      transition: background .3s;
    }
    .btnContactFooter:hover {
      background: #c53032;
      color: #fff;
    }
  </style>


