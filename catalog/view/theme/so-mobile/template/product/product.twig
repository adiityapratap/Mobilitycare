$(document).on('submit', '.bookaDemoForm', function (e) {
   $('#loaderOverlay').show();
    //  Guard: allow normal submit after validation
    if ($(this).data('validated') === true) {
        return true; // allow normal submit
    }

    e.preventDefault();

    var form = $(this);
    $('.text-red').remove();

    $.ajax({
        url: 'index.php?route=information/demo_request/validateAjax',
        type: 'POST',
        data: form.serialize(),
        dataType: 'json',
        success: function (res) {

            if (res.success) {
                // Mark form as validated
                form.data('validated', true);
                  $('#loaderOverlay').hide();
                // üîÅ Trigger normal submit (this time it will pass through)
                form.trigger('submit');
                return;
            }

            if (res.error) {
                let lastError = '';

                $.each(res.error, function (key, msg) {
                    $('[name="' + key + '"]', form)
                        .after('<div class="text-red">' + msg + '</div>');
                    lastError = msg;
                });

                $('#toastMessage')
                    .text(lastError)
                    .addClass('error')
                    .show();

                setTimeout(() => $('#toastMessage').fadeOut(), 8000);
            }
        }
    });
});




