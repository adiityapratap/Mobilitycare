{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>Quote Requests</h1>
    </div>
  </div>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> Quote Requests List</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="quote-requests-table">
            <!-- Filter Row -->
            <thead>
              <tr>
                <th><input type="text" class="form-control input-sm filter" data-column="0" placeholder="Name..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="1" placeholder="Email..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="2" placeholder="Phone..."></th>
                <th>
                  <select class="form-control input-sm filter" data-column="3">
                    <option value="">All Quote Types</option>
                    <option value="New">New</option>
                    <option value="Replacement">Replacement</option>
                    <option value="Repair">Repair</option>
                    <option value="Service">Service</option>
                    <!-- Update these with your actual quote types -->
                  </select>
                </th>
                <th>
                  <select class="form-control input-sm filter" data-column="4">
                    <option value="">All Contact Types</option>
                    <option value="Phone">Phone</option>
                    <option value="Email">Email</option>
                    <option value="Web Form">Web Form</option>
                    <!-- Update with your actual contact types -->
                  </select>
                </th>
                <th><input type="text" class="form-control input-sm filter" data-column="5" placeholder="Product/Brand..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="6" placeholder="Date (dd Mmm yyyy)..."></th>
                <th class="text-center">Action</th> <!-- No filter for action column -->
              </tr>

              <!-- Header Row -->
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Quote Type</th>
                <th>Contact Type</th>
                <th>Product/Brand Name</th>
                <th>Date Added</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>

            <tbody id="quote-table-body">
              {% for request in requests %}
              <tr>
                <td>{{ request.fullname }}</td>
                <td>{{ request.email }}</td>
                <td>{{ request.phone }}</td>
                <td>{{ request.quote_type }}</td>
                <td>{{ request.contact_type }}</td>
                <td>
                  {% if request.is_manufacturer == 0 %}
                    <b>Product Name:</b> {{ request.product_name }}
                  {% else %}
                    <b>Manufacturer Name:</b> {{ request.manufacturer_name }}
                  {% endif %}
                </td>
                <td>
                  {% if request.date_added and request.date_added != '0000-00-00 00:00:00' %}
                    {{ request.date_added|date("d M Y") }}
                  {% else %}
                    -
                  {% endif %}
                </td>
                <td class="text-right">
                  <div class="d-flex justify-content-end gap-1">
                    <a href="{{ actionurl ~ '&id=' ~ request.id }}" class="btn btn-sm btn-success" title="View">
                      <i class="fa fa-eye"></i>
                    </a>
                    <a href="#" data-id="{{ request.id }}" class="btn btn-sm btn-danger delete-btn" title="Delete">
                      <i class="fa fa-trash-o"></i>
                    </a>
                  </div>
                </td>
              </tr>
              {% else %}
              <tr>
                <td colspan="8" class="text-center">No quote requests found.</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

{{ footer }}

<style>
  .filter {
    width: 100%;
    margin-bottom: 4px;
    font-size: 12px;
    padding: 4px;
  }
  .table th, .table td {
    vertical-align: middle;
  }
</style>

<script>
// Plain JavaScript column filtering for Quote Requests
document.addEventListener('DOMContentLoaded', function () {
  const table = document.getElementById('quote-requests-table');
  if (!table) return;

  const tbody = document.getElementById('quote-table-body');
  const filters = document.querySelectorAll('#quote-requests-table .filter');
  const rows = Array.from(tbody.querySelectorAll('tr'));

  function applyFilters() {
    let anyVisible = false;

    rows.forEach(row => {
      let show = true;

      filters.forEach(filter => {
        const columnIndex = parseInt(filter.dataset.column);
        const filterValue = filter.value.trim().toLowerCase();
        const cell = row.cells[columnIndex];

        if (!cell) return;

        const cellText = cell.textContent.trim().toLowerCase();

        if (filterValue && !cellText.includes(filterValue)) {
          show = false;
        }
      });

      row.style.display = show ? '' : 'none';
      if (show) anyVisible = true;
    });

    // Show/hide "no matching results" row
    const noResultsRow = document.querySelector('#no-results-quote');
    if (!anyVisible && rows.length > 0) {
      if (!noResultsRow) {
        const tr = document.createElement('tr');
        tr.id = 'no-results-quote';
        tr.innerHTML = '<td colspan="8" class="text-center">No matching quote requests found</td>';
        tbody.appendChild(tr);
      }
    } else if (noResultsRow) {
      noResultsRow.remove();
    }
  }

  // Attach events
  filters.forEach(filter => {
    filter.addEventListener('input', applyFilters);
    filter.addEventListener('change', applyFilters); // for <select>
  });

  // Initial filter run
  applyFilters();

  // Optional: Delete confirmation
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      if (confirm('Are you sure you want to delete this quote request?')) {
        const id = this.dataset.id;
        alert(`Delete ID: ${id}`); // Replace with actual AJAX delete
        // Optionally remove row: this.closest('tr').remove(); applyFilters();
      }
    });
  });
});
</script>