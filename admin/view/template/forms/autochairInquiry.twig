{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>Autochair Enquiries</h1>
    </div>
  </div>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="enquiries-table">
            <thead>
              <!-- Filter Row -->
              <tr>
                <th><input type="text" class="form-control input-sm filter" data-column="0" placeholder="Filter Name..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="1" placeholder="Filter Email..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="2" placeholder="Filter Phone..."></th>
                <th>
                 
                </th>
                <th>
                 
                </th>
                <th><input type="text" class="form-control input-sm filter" data-column="5" placeholder="Filter Date (dd Mmm yyyy)..."></th>
                <th class="text-center">Action</th>
              </tr>

              <!-- Header Row -->
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Quote Type</th>
                <th>Contact Type</th>
                <th>Date Added</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody id="table-body">
              {% for request in requests %}
              <tr>
                <td>{{ request.fullname }}</td>
                <td>{{ request.email }}</td>
                <td>{{ request.phone }}</td>
                <td>{{ request.quote_type }}</td>
                <td>{{ request.contact_type }}</td>
                <td>{{ request.date_added|date("d M Y") }}</td>
                <td class="text-right">
                  <div class="d-flex justify-content-end gap-1">
                    <a href="{{ actionurl ~ '&id=' ~ request.id }}" class="btn btn-sm btn-success" title="View">
                      <i class="fa fa-eye"></i>
                    </a>
                    <a href="#" data-id="{{ request.id }}" class="btn btn-sm btn-danger delete-btn" title="Delete">
                      <i class="fa fa-trash-o"></i>
                    </a>
                  </div>
                </td>
              </tr>
              {% else %}
              <tr>
                <td colspan="7" class="text-center">No enquiries found</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

{{ footer }}

<script>
// Plain JavaScript column filtering
document.addEventListener('DOMContentLoaded', function () {
  const table = document.getElementById('enquiries-table');
  if (!table) return;

  const tbody = document.getElementById('table-body');
  const filters = document.querySelectorAll('#enquiries-table .filter');
  const rows = Array.from(tbody.querySelectorAll('tr'));

  // Function to apply all filters
  function applyFilters() {
    rows.forEach(row => {
      let show = true;

      filters.forEach(filter => {
        const columnIndex = parseInt(filter.dataset.column);
        const filterValue = filter.value.trim().toLowerCase();
        const cell = row.cells[columnIndex];
        if (!cell) return;

        const cellText = cell.textContent.trim().toLowerCase();

        if (filterValue && !cellText.includes(filterValue)) {
          show = false;
        }
      });

      row.style.display = show ? '' : 'none';
    });

    // Show "No results" row if all rows are hidden
    const visibleRows = rows.filter(row => row.style.display !== 'none');
    const noResultsRow = document.querySelector('#no-results-row');
    
    if (visibleRows.length === 0 && rows.length > 0) {
      if (!noResultsRow) {
        const tr = document.createElement('tr');
        tr.id = 'no-results-row';
        tr.innerHTML = '<td colspan="7" class="text-center">No matching enquiries found</td>';
        tbody.appendChild(tr);
      }
    } else if (noResultsRow) {
      noResultsRow.remove();
    }
  }

  // Attach event listeners to all filters
  filters.forEach(filter => {
    filter.addEventListener('input', applyFilters);
    filter.addEventListener('change', applyFilters); // for selects
  });

  // Optional: Delete confirmation
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      return false;
      const id = this.dataset.id;
      if (confirm('Are you sure you want to delete this enquiry?')) {
        // Replace with your actual delete logic (e.g. fetch/AJAX)
        alert(`Delete request sent for ID: ${id}`);
        // Optionally remove row after successful delete:
        // this.closest('tr').remove();
        // applyFilters(); // refresh filter state
      }
    });
  });
});
</script>