{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
            </div>
            <div class="panel-body">
                {% if trial_requests %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="trial-requests-table">
                        <!-- Filter Row -->
                        <thead>
                            <tr>
                                <th><input type="text" class="form-control input-sm filter" data-column="0" placeholder="ID..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="1" placeholder="Full Name..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="2" placeholder="Email..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="3" placeholder="Phone..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="4" placeholder="Organisation..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="5" placeholder="Address..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="6" placeholder="Postcode..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="7" placeholder="Profession..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="8" placeholder="Client Name..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="9" placeholder="Client Phone..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="10" placeholder="Product/Brand..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="11" placeholder="Notes..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="12" placeholder="Date (dd Mmm yyyy)..."></th>
                            </tr>

                            <!-- Header Row -->
                            <tr>
                                <td class="text-right">ID</td>
                                <td class="text-left">Full Name</td>
                                <td class="text-left">Email</td>
                                <td class="text-left">Phone</td>
                                <td class="text-left">Organisation</td>
                                <td class="text-left">Address</td>
                                <td class="text-left">Postcode</td>
                                <td class="text-left">Profession</td>
                                <td class="text-left">Client Full Name</td>
                                <td class="text-left">Client Phone</td>
                                <td class="text-left">Product/Brand</td>
                                <td class="text-left">Notes</td>
                                <td class="text-left">Date Added</td>
                            </tr>
                        </thead>

                        <tbody id="trial-table-body">
                            {% for trial_request in trial_requests %}
                            <tr>
                                <td class="text-right">{{ trial_request.trial_request_id }}</td>
                                <td class="text-left">{{ trial_request.fullname }}</td>
                                <td class="text-left">{{ trial_request.email }}</td>
                                <td class="text-left">{{ trial_request.phone }}</td>
                                <td class="text-left">{{ trial_request.organisation }}</td>
                                <td class="text-left">{{ trial_request.address }}</td>
                                <td class="text-left">{{ trial_request.postcode }}</td>
                                <td class="text-left">{{ trial_request.profession }}</td>
                                <td class="text-left">{{ trial_request.client_fullname }}</td>
                                <td class="text-left">{{ trial_request.client_phone }}</td>
                                <td class="text-left">{{ trial_request.product_name }}</td>
                                <td class="text-left">{{ trial_request.notes }}</td>
                                <td class="text-left">
                                    {% if trial_request.date_added and trial_request.date_added != '0000-00-00 00:00:00' %}
                                        {{ trial_request.date_added|date("d M Y") }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="13" class="text-center">No trial requests found.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <p>{{ text_no_results }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
    .text-black, .table, .table th, .table td, .panel-heading, .panel-title {
        color: #000 !important;
    }
    .table-responsive {
        -webkit-overflow-scrolling: touch;
    }
    @media (max-width: 767px) {
        .table-responsive {
            overflow-x: auto;
        }
    }
    .filter {
        width: 100%;
        margin-bottom: 4px;
        font-size: 12px;
        padding: 4px;
    }
</style>

{{ footer }}

<script>
// Plain JavaScript column filtering - Trial Requests
document.addEventListener('DOMContentLoaded', function () {
    const table = document.getElementById('trial-requests-table');
    if (!table) return;

    const tbody = document.getElementById('trial-table-body');
    const filters = document.querySelectorAll('#trial-requests-table .filter');
    const rows = Array.from(tbody.querySelectorAll('tr'));

    function applyFilters() {
        let anyVisible = false;

        rows.forEach(row => {
            let show = true;

            filters.forEach(filter => {
                const columnIndex = parseInt(filter.dataset.column);
                const filterValue = filter.value.trim().toLowerCase();
                const cell = row.cells[columnIndex];

                if (!cell) return;

                const cellText = cell.textContent.trim().toLowerCase();

                if (filterValue && !cellText.includes(filterValue)) {
                    show = false;
                }
            });

            row.style.display = show ? '' : 'none';
            if (show) anyVisible = true;
        });

        // Show/hide "no matching results" row
        const noResultsRow = document.querySelector('#no-results-trial');
        if (!anyVisible && rows.length > 0) {
            if (!noResultsRow) {
                const tr = document.createElement('tr');
                tr.id = 'no-results-trial';
                tr.innerHTML = '<td colspan="13" class="text-center">No matching trial requests found</td>';
                tbody.appendChild(tr);
            }
        } else if (noResultsRow) {
            noResultsRow.remove();
        }
    }

    // Attach event listeners
    filters.forEach(filter => {
        filter.addEventListener('input', applyFilters);
        filter.addEventListener('change', applyFilters);
    });

    // Run once on load
    applyFilters();
});
</script>