{{ header }}
{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ cancel }}" class="btn btn-default">Back</a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-envelope"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        {% if forms %}
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="forms-table">
            <!-- Filter Row -->
            <thead>
              <tr>
                <th><input type="text" class="form-control input-sm filter" data-column="0" placeholder="ID..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="1" placeholder="Name..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="2" placeholder="Email..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="3" placeholder="Phone..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="4" placeholder="Postcode..."></th>
                <th>
                 
                </th>
                <th>
                  
                </th>
                <th><input type="text" class="form-control input-sm filter" data-column="7" placeholder="Message..."></th>
                <th><input type="text" class="form-control input-sm filter" data-column="8" placeholder="Date (dd Mmm yyyy)..."></th>
              </tr>

              <!-- Header Row -->
              <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Postcode</th>
                <th>Contact Type</th>
                <th>Reason</th>
                <th>Message</th>
                <th>Date Added</th>
              </tr>
            </thead>

            <tbody id="forms-table-body">
              {% for form in forms %}
              <tr>
                <td>{{ form.id }}</td>
                <td>{{ form.fullname }}</td>
                <td>{{ form.email }}</td>
                <td>{{ form.phone }}</td>
                <td>{{ form.postcode }}</td>
                <td>{{ form.contact_type }}</td>
                <td>{{ form.inquiry_reason }}</td>
                <td>{{ form.message }}</td>
                <td>{{ form.date_added|date("d M Y") }}</td>
              </tr>
              {% else %}
              <tr>
                <td colspan="9" class="text-center">No contact form submissions found.</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        {% else %}
        <p>No contact form submissions found.</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{{ footer }}

<script>
// Plain JavaScript column filtering for contact forms table
document.addEventListener('DOMContentLoaded', function () {
  const table = document.getElementById('forms-table');
  if (!table) return;

  const tbody = document.getElementById('forms-table-body');
  const filters = document.querySelectorAll('#forms-table .filter');
  const rows = Array.from(tbody.querySelectorAll('tr'));

  function applyFilters() {
    let anyVisible = false;

    rows.forEach(row => {
      let show = true;

      filters.forEach(filter => {
        const columnIndex = parseInt(filter.dataset.column);
        const filterValue = filter.value.trim().toLowerCase();
        const cell = row.cells[columnIndex];

        if (!cell) return;

        const cellText = cell.textContent.trim().toLowerCase();

        if (filterValue && !cellText.includes(filterValue)) {
          show = false;
        }
      });

      row.style.display = show ? '' : 'none';
      if (show) anyVisible = true;
    });

    // Show/hide "no results" message
    const noResultsRow = document.querySelector('#no-results-row');
    if (!anyVisible && rows.length > 0) {
      if (!noResultsRow) {
        const tr = document.createElement('tr');
        tr.id = 'no-results-row';
        tr.innerHTML = '<td colspan="9" class="text-center">No matching submissions found</td>';
        tbody.appendChild(tr);
      }
    } else if (noResultsRow) {
      noResultsRow.remove();
    }
  }

  // Attach listeners
  filters.forEach(filter => {
    filter.addEventListener('input', applyFilters);
    filter.addEventListener('change', applyFilters); // for select elements
  });

  // Initial filter (in case there are pre-filled values)
  applyFilters();
});
</script>