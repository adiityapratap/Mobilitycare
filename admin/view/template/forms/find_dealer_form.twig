{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>Request Local Dealer Requests</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
            </div>
            <div class="panel-body">
                {% if findDealerForm_requests %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dealer-requests-table">
                        <!-- Filter Row -->
                        <thead>
                            <tr>
                                <th><input type="text" class="form-control input-sm filter" data-column="0" placeholder="Full Name..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="1" placeholder="Email..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="2" placeholder="Phone..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="3" placeholder="Postcode..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="4" placeholder="Product..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="5" placeholder="Make..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="6" placeholder="Model..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="7" placeholder="Year..."></th>
                                <th>
                                    <select class="form-control input-sm filter" data-column="8">
                                        <option value="">All Body Types</option>
                                        <option value="Sedan">Sedan</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Hatchback">Hatchback</option>
                                        <option value="Coupe">Coupe</option>
                                        <option value="Convertible">Convertible</option>
                                        <option value="Wagon">Wagon</option>
                                        <option value="MPV">MPV</option>
                                        <!-- Add more as needed -->
                                    </select>
                                </th>
                                <th><input type="text" class="form-control input-sm filter" data-column="9" placeholder="Additional info..."></th>
                                <th><input type="text" class="form-control input-sm filter" data-column="10" placeholder="Date (dd Mmm yyyy)..."></th>
                            </tr>

                            <!-- Header Row -->
                            <tr>
                                <td class="text-left">Full Name</td>
                                <td class="text-left">Email</td>
                                <td class="text-left">Phone</td>
                                <td class="text-left">Postcode</td>
                                <td class="text-left">Product</td>
                                <td class="text-left">Make</td>
                                <td class="text-left">Model</td>
                                <td class="text-left">Year</td>
                                <td class="text-left">Body Type</td>
                                <td class="text-left">Additional info</td>
                                <td class="text-left">Date Added</td>
                            </tr>
                        </thead>

                        <tbody id="dealer-table-body">
                            {% for findDealerForm_request in findDealerForm_requests %}
                            <tr>
                                <td class="text-left">{{ findDealerForm_request.fullname }}</td>
                                <td class="text-left">{{ findDealerForm_request.email }}</td>
                                <td class="text-left">{{ findDealerForm_request.phone }}</td>
                                <td class="text-left">{{ findDealerForm_request.postcode }}</td>
                                <td class="text-left">{{ findDealerForm_request.product_name }}</td>
                                <td class="text-left">{{ findDealerForm_request.car_make }}</td>
                                <td class="text-left">{{ findDealerForm_request.car_model }}</td>
                                <td class="text-left">{{ findDealerForm_request.car_year }}</td>
                                <td class="text-left">{{ findDealerForm_request.body_type }}</td>
                                <td class="text-left">{{ findDealerForm_request.additional_info }}</td>
                                <td class="text-left">
                                    {% if findDealerForm_request.date_added and findDealerForm_request.date_added != '0000-00-00 00:00:00' %}
                                        {{ findDealerForm_request.date_added|date("d M Y") }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="11" class="text-center">No dealer requests found.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <p>{{ text_no_results }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
    .text-black, .table, .table th, .table td, .panel-heading, .panel-title {
        color: #000 !important;
    }
    .table-responsive {
        -webkit-overflow-scrolling: touch;
    }
    @media (max-width: 767px) {
        .table-responsive {
            overflow-x: auto;
        }
    }
    .filter {
        width: 100%;
        margin-bottom: 4px;
        font-size: 12px;
        padding: 4px;
    }
</style>

{{ footer }}

<script>
// Plain JavaScript column filtering - Dealer Requests
document.addEventListener('DOMContentLoaded', function () {
    const table = document.getElementById('dealer-requests-table');
    if (!table) return;

    const tbody = document.getElementById('dealer-table-body');
    const filters = document.querySelectorAll('#dealer-requests-table .filter');
    const rows = Array.from(tbody.querySelectorAll('tr'));

    function applyFilters() {
        let anyVisible = false;

        rows.forEach(row => {
            let show = true;

            filters.forEach(filter => {
                const columnIndex = parseInt(filter.dataset.column);
                const filterValue = filter.value.trim().toLowerCase();
                const cell = row.cells[columnIndex];

                if (!cell) return;

                const cellText = cell.textContent.trim().toLowerCase();

                if (filterValue && !cellText.includes(filterValue)) {
                    show = false;
                }
            });

            row.style.display = show ? '' : 'none';
            if (show) anyVisible = true;
        });

        // Show/hide "no matching results" row
        const noResultsRow = document.querySelector('#no-results-dealer');
        if (!anyVisible && rows.length > 0) {
            if (!noResultsRow) {
                const tr = document.createElement('tr');
                tr.id = 'no-results-dealer';
                tr.innerHTML = '<td colspan="11" class="text-center">No matching dealer requests found</td>';
                tbody.appendChild(tr);
            }
        } else if (noResultsRow) {
            noResultsRow.remove();
        }
    }

    // Attach event listeners
    filters.forEach(filter => {
        filter.addEventListener('input', applyFilters);
        filter.addEventListener('change', applyFilters); // for select
    });

    // Run once on page load
    applyFilters();
});
</script>