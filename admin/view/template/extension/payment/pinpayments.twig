<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-pinpayments">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">{{ text_edit }}</h4>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-publishable-key">{{ entry_publishable_key }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_pinpayments_publishable_key" value="{{ payment_pinpayments_publishable_key }}" placeholder="{{ entry_publishable_key }}" id="input-publishable-key" class="form-control" />
                    {% if error_publishable_key %}
                        <div class="text-danger">{{ error_publishable_key }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-secret-key">{{ entry_secret_key }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_pinpayments_secret_key" value="{{ payment_pinpayments_secret_key }}" placeholder="{{ entry_secret_key }}" id="input-secret-key" class="form-control" />
                    {% if error_secret_key %}
                        <div class="text-danger">{{ error_secret_key }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-order-status">{{ entry_order_status }}</label>
                <div class="col-sm-10">
                    <select name="payment_pinpayments_order_status_id" id="input-order-status" class="form-control">
                        {% for order_status in order_statuses %}
                            <option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_pinpayments_order_status_id %}selected{% endif %}>{{ order_status.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                    <select name="payment_pinpayments_geo_zone_id" id="input-geo-zone" class="form-control">
                        <option value="0">{{ text_all_zones }}</option>
                        {% for geo_zone in geo_zones %}
                            <option value="{{ geo_zone.geo_zone_id }}" {% if geo_zone.geo_zone_id == payment_pinpayments_geo_zone_id %}selected{% endif %}>{{ geo_zone.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                    <select name="payment_pinpayments_status" id="input-status" class="form-control">
                        <option value="1" {% if payment_pinpayments_status %}selected{% endif %}>{{ text_enabled }}</option>
                        <option value="0" {% if not payment_pinpayments_status %}selected{% endif %}>{{ text_disabled }}</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_pinpayments_sort_order" value="{{ payment_pinpayments_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">{{ button_save }}</button>
            <a href="{{ cancel }}" class="btn btn-danger">{{ button_cancel }}</a>
        </div>
        {% if error_warning %}
            <div class="alert alert-danger">{{ error_warning }}</div>
        {% endif %}
    </div>
</form>
